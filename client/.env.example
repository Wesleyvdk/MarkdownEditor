# Database Configuration (Primary)
DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/obsidian_clone

# Database Configuration (Alternative - individual settings)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_NAME=obsidian_clone
DATABASE_SSL=false

# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=obsidian-clone-notes
